{{#if bookings.length}}<div>
    <h2>
        <i class="fas fa-person"></i> {{get_name bookings}}'s Personal Page <i class="fas fa-person"></i>
    </h2>
    <p></p>
</div>
<div>
    <h5> <i class="fas fa-address-card"></i> Staff ID: {{get_id bookings}} </h5>
    <h5><i class="fas fa-envelope"></i> Staff Email: {{get_email bookings}}</h5>
</div>
<hr>
{{else}}
You haven't been assigned as care staff.
{{/if}}

{{#each bookings as |booking|}}
<div class="card border-dark mx-3 mb-3 col-lg-5 col-md-10" style="">
    <div class="card-header">
        <h4 class=""><i class="fas fa-address-card"></i> Booking ID: {{booking.id}}</h4>
    </div>
    <div class="card-body text-dark">

        <h5 class="card-title">
            <strong>[&nbsp;Pet ID:&nbsp;{{pet.id}}&nbsp;]</strong>
            &nbsp;&nbsp;<strong>Name:
            </strong>{{pet.pet_name}}
        </h5>
        <hr>
        <h5 class="card-title">
            <strong><i class="fas fa-paw"></i>&nbsp;Type:&nbsp;&nbsp;
                {{pet.pet_type}}&nbsp;&nbsp;&nbsp;</strong><strong>(&nbsp;{{pet.pet_breed}}&nbsp;)</strong>
        </h5>
        <hr>
        <p class="card-text"><i class="fas fa-user"></i>&nbsp;<strong>Owner:</strong>&nbsp;&nbsp;{{pet.owner_name}}</p>
        <hr>
        <p class="card-text"><i class="fas fa-calendar-check"></i>&nbsp;Drop off: {{format_date booking.date_dropoff}}
        </p>
        <p class="card-text"><i class="fas fa-calendar-check"></i>&nbsp;Pick up: {{format_date booking.date_pickup}}</p>
        <hr>
        <p class="card-text">
            <i class="fas fa-dollar-sign"></i>
            Fee: {{booking.fee}}
        </p>
        <hr>
        <p class="card-text">
            <i class="fas fa-star"></i>
            Note:
            {{pet.pet_notes}}
        </p>
        <hr>
        <p class="card-text"> <i class="fas fa-user-check"></i> Staff assigned:</p>
        <p>[&nbsp;ID: {{staff.id}}&nbsp;]&nbsp;&nbsp;{{staff.name}}</p>
        <hr>
        <div class="card-text">
            Created at: {{format_date date_created}}
        </div>

        <div class="card-text text-center">
            <a href="/booking/edit/{{booking.id}}"><button class="btn btn-dark m-2" id="bookingBtn"
                    type="submit">EDIT</button></a>
            <button class="btn btn-danger m-2 deleteBtn" data-id="{{booking.id}}">DELETE</button>

        </div>
    </div>
</div>
{{/each}}

<script src="/js/homepage.js"></script>